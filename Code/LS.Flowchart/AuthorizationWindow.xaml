<Window
    x:Class="LS.Flowchart.AuthorizationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LS.Flowchart"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AuthorizationWindow"
    Width="800"
    Height="450"
    Background="Black"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="org" Color="#FFA500" />
        </Grid.Resources>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Image Width="300" Source="/Asset/Images/logo1.png" />
                <StackPanel
                    Height="15"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        x:Name="_1"
                        Width="10"
                        Height="10"
                        Margin="10,0,0,0"
                        Data="M64 64h896v896H64z"
                        Fill="White"
                        Stretch="Fill" />
                    <Path
                        x:Name="_2"
                        Width="10"
                        Height="10"
                        Margin="10,0,0,0"
                        Data="M64 64h896v896H64z"
                        Fill="White"
                        Stretch="Fill" />
                    <Path
                        x:Name="_3"
                        Width="10"
                        Height="10"
                        Margin="10,0,0,0"
                        Data="M64 64h896v896H64z"
                        Fill="White"
                        Stretch="Fill" />
                    <Path
                        x:Name="_4"
                        Width="10"
                        Height="10"
                        Margin="10,0,0,0"
                        Data="M64 64h896v896H64z"
                        Fill="White"
                        Stretch="Fill" />
                    <Path
                        x:Name="_5"
                        Width="10"
                        Height="10"
                        Margin="10,0,0,0"
                        Data="M64 64h896v896H64z"
                        Fill="White"
                        Stretch="Fill" />
                    <Path
                        x:Name="_6"
                        Width="10"
                        Height="10"
                        Margin="10,0,0,0"
                        Data="M64 64h896v896H64z"
                        Fill="White"
                        Stretch="Fill" />
                    <StackPanel.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <!--  动画 1：延迟 0s 开始  -->
                                    <ParallelTimeline BeginTime="0:0:0">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_1"
                                            Storyboard.TargetProperty="Width"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_1"
                                            Storyboard.TargetProperty="Height"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <ColorAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_1"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFA500"
                                            Duration="0:0:0.8" />
                                    </ParallelTimeline>
                                    <!--  动画 2：延迟 0.8s 开始  -->
                                    <ParallelTimeline BeginTime="0:0:0.8">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_2"
                                            Storyboard.TargetProperty="Width"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_2"
                                            Storyboard.TargetProperty="Height"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <ColorAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_2"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFA500"
                                            Duration="0:0:0.8" />
                                    </ParallelTimeline>
                                    <!--  动画 3：延迟 1.6s 开始  -->
                                    <ParallelTimeline BeginTime="0:0:1.6">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_3"
                                            Storyboard.TargetProperty="Width"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_3"
                                            Storyboard.TargetProperty="Height"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <ColorAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_3"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFA500"
                                            Duration="0:0:0.8" />
                                    </ParallelTimeline>
                                    <!--  动画 4：延迟 2.4s 开始  -->
                                    <ParallelTimeline BeginTime="0:0:2.4">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_4"
                                            Storyboard.TargetProperty="Width"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_4"
                                            Storyboard.TargetProperty="Height"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <ColorAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_4"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFA500"
                                            Duration="0:0:0.8" />
                                    </ParallelTimeline>
                                    <!--  动画 5：延迟 3.2s 开始  -->
                                    <ParallelTimeline BeginTime="0:0:3.2">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_5"
                                            Storyboard.TargetProperty="Width"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_5"
                                            Storyboard.TargetProperty="Height"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <ColorAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_5"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFA500"
                                            Duration="0:0:0.8" />
                                    </ParallelTimeline>
                                    <!--  动画 6：延迟 4.0s 开始  -->
                                    <ParallelTimeline BeginTime="0:0:4.0">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_6"
                                            Storyboard.TargetProperty="Width"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_6"
                                            Storyboard.TargetProperty="Height"
                                            To="15"
                                            Duration="0:0:0.8" />
                                        <ColorAnimation
                                            AutoReverse="True"
                                            Storyboard.TargetName="_6"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFA500"
                                            Duration="0:0:0.8" />
                                    </ParallelTimeline>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </StackPanel.Triggers>
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Visibility="{Binding ShowSN}">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Run
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="设备SN：" />
                        <Run
                            FontSize="18"
                            Foreground="Orange"
                            Text="{Binding SN}" />
                    </TextBlock>
                    <Button
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Command="{Binding CloseCommand}">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid>
                                    <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                    <Path
                                        Width="25"
                                        Height="25"
                                        Data="M537.6 947.2c-225.28 0-409.6-184.32-409.6-409.6 0-148.48 81.92-281.6 204.8-353.28l51.2 87.04c-92.16 51.2-153.6 148.48-153.6 266.24 0 168.96 138.24 307.2 307.2 307.2s307.2-138.24 307.2-307.2c0-112.64-61.44-209.92-153.6-266.24l51.2-87.04c122.88 71.68 204.8 204.8 204.8 353.28 0 225.28-184.32 409.6-409.6 409.6z m0-460.8c-30.72 0-51.2-20.48-51.2-51.2v-256c0-30.72 20.48-51.2 51.2-51.2s51.2 20.48 51.2 51.2v256c0 30.72-20.48 51.2-51.2 51.2z"
                                        Fill="Red"
                                        Stretch="Fill" />
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
