<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="DefaultBackground" Color="Black" />
    <SolidColorBrush x:Key="DefaultForeground" Color="White" />
    <SolidColorBrush x:Key="DefaultMouseOverBrush" Color="White" />
    <SolidColorBrush x:Key="DefaultCanvasBackground" Color="LightGray" />

    <SolidColorBrush x:Key="DefaultModuleBackground" Color="White" />
    <SolidColorBrush x:Key="DefaultModuleBorderBrush" Color="Gray" />
    <SolidColorBrush x:Key="DefaultModuleSelectBorderBrush" Color="OrangeRed" />
    <SolidColorBrush x:Key="DefaultModuleForeground" Color="Black" />

    <SolidColorBrush x:Key="DefaultContextMenuBackground" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="DefaultContextMenuForeground" Color="Black" />

    <SolidColorBrush x:Key="DefaultSelectBrush" Color="#B0E0E6" />

    <LinearGradientBrush x:Key="WinBarBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.01" Color="#000000" />
        <GradientStop Offset="0.5" Color="#000000" />
        <GradientStop Offset="0.948" Color="#000000" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="DefaultGray" Color="LightGray" />
    <!--  定义橙色画刷  -->
    <SolidColorBrush x:Key="OrangeBrush" Color="Orange" />
    <!--  初始界面背景色  -->
    <LinearGradientBrush x:Key="InitBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.01" Color="#A9A9A9" />
        <GradientStop Offset="0.5" Color="#808080" />
        <GradientStop Offset="0.948" Color="#696969" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="InitButtonMoveOnBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.01" Color="#DCDCDC" />
        <GradientStop Offset="0.5" Color="#D3D3D3" />
        <GradientStop Offset="0.948" Color="#C0C0C0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="InitButtonTitleBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.01" Color="#C0C0C0" />
        <GradientStop Offset="0.5" Color="#A9A9A9" />
        <GradientStop Offset="0.948" Color="#808080" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="VersionForeground" Color="#DCDCDC" />
    <LinearGradientBrush x:Key="InitButtonBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.01" Color="#A9A9A9" />
        <GradientStop Offset="0.5" Color="#808080" />
        <GradientStop Offset="0.948" Color="#696969" />
    </LinearGradientBrush>
    <!--  自定义提示样式  -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="LightGray" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Orange" />
    </Style>

    <Style x:Key="Main_Menu" TargetType="MenuItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="Border" Background="Transparent">
                        <Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="IconGroup" />
                                    <!--  图标列  -->
                                    <ColumnDefinition Width="*" />
                                    <!--  文本列  -->
                                    <ColumnDefinition Width="Auto" />
                                    <!--  箭头列  -->
                                </Grid.ColumnDefinitions>

                                <!--  图标  -->
                                <Path
                                    x:Name="_icon"
                                    Grid.Column="0"
                                    Width="16"
                                    Height="16"
                                    Margin="5,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="{TemplateBinding Icon}"
                                    Fill="{DynamicResource DefaultGray}"
                                    Stretch="Fill" />

                                <!--  文本（水平居中）  -->
                                <TextBlock
                                    x:Name="title"
                                    Grid.Column="1"
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{TemplateBinding Header}" />

                                <!--  子菜单箭头  -->
                                <Path
                                    x:Name="Arrow"
                                    Grid.Column="2"
                                    Margin="0,0,2,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Data="M0,0 L4,4 L0,8 Z"
                                    Fill="{DynamicResource DefaultGray}"
                                    Visibility="Collapsed" />

                                <Popup
                                    x:Name="SubMenuPopup"
                                    IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                    Placement="Bottom">
                                    <StackPanel IsItemsHost="True" />
                                </Popup>
                            </Grid>
                        </Grid>
                    </Border>

                    <!--  子菜单弹出框样式  -->
                    <ControlTemplate.Triggers>
                        <!--  显示子菜单箭头  -->
                        <Trigger Property="HasItems" Value="True">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Visible" />
                        </Trigger>


                        <!--  第一层菜单（顶级菜单）向下弹出  -->
                        <Trigger Property="Role" Value="TopLevelHeader">
                            <Setter TargetName="_icon" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="_icon" Property="Margin" Value="10,0,10,0" />
                            <Setter TargetName="Arrow" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="SubMenuPopup" Property="Placement" Value="Bottom" />
                            <Setter TargetName="SubMenuPopup" Property="VerticalOffset" Value="2" />
                            <!--  微调间距  -->
                        </Trigger>

                        <!--  其他层菜单（子菜单）向右弹出  -->
                        <Trigger Property="Role" Value="SubmenuHeader">
                            <Setter TargetName="title" Property="MinWidth" Value="220" />
                            <Setter TargetName="_icon" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Arrow" Property="Visibility" Value="Visible" />
                            <Setter TargetName="SubMenuPopup" Property="Placement" Value="Right" />
                            <Setter TargetName="SubMenuPopup" Property="HorizontalOffset" Value="-1" />
                            <!--  避免重叠  -->
                        </Trigger>

                        <Trigger Property="HasItems" Value="False">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <!--  鼠标悬停效果  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#292929" />
                            <!--  悬停背景色  -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NoBorderTabControl" TargetType="TabControl">
        <Style.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border
                                x:Name="_bg"
                                Background="Transparent"
                                BorderThickness="0">
                                <ContentPresenter
                                    x:Name="ContentSite"
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Panel.ZIndex" Value="1" />
                                    <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="Black" />
                                    <Setter TargetName="_bg" Property="Background" Value="LightGray" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="LightGray" />
                                    <Setter TargetName="_bg" Property="Background" Value="Transparent" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="Black" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Style.Resources>
    </Style>

    <SolidColorBrush x:Key="TabControl.BodyBackground" Color="#DCDCDC" />
    <SolidColorBrush x:Key="TabControl.HeaderBackGround" Color="#DCDCDC" />
    <SolidColorBrush x:Key="TabControl.ActivedHeaderBackground" Color="#DCDCDC" />
    <SolidColorBrush x:Key="TabControl.BorderBrush" Color="Transparent" />
    <SolidColorBrush x:Key="TabControl.ActivedHeaderBorderBrush" Color="Orange" />
    <SolidColorBrush x:Key="TabItem.Foreground" Color="#808080" />
    <SolidColorBrush x:Key="TabItem.Background" Color="#DCDCDC" />
    <SolidColorBrush x:Key="TabItem.ActivedBackground" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="TabItem.ActivedForeground" Color="Orange" />
    <Style
        x:Key="VerticalTabControlStyle"
        BasedOn="{StaticResource {x:Type TabControl}}"
        TargetType="{x:Type TabControl}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Border
                        Margin="0"
                        Background="{StaticResource TabControl.BodyBackground}"
                        BorderThickness="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border
                                Name="Mask"
                                Grid.Column="0"
                                Background="{StaticResource TabControl.HeaderBackGround}" />
                            <Border
                                Grid.Column="0"
                                Margin="0"
                                Padding="0">
                                <TabPanel IsItemsHost="True">
                                    <TabPanel.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Mask}" />
                                    </TabPanel.OpacityMask>
                                </TabPanel>
                            </Border>
                            <Border
                                Grid.Column="1"
                                Margin="0"
                                BorderBrush="{StaticResource TabControl.BorderBrush}"
                                BorderThickness="0,1,1,1" />
                            <Border Grid.Column="1">
                                <ContentPresenter
                                    x:Name="PART_SelectedContentHost"
                                    ContentSource="SelectedContent"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <!--  删除默认Border（Bd）  -->
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    <!--  禁用所有默认视觉状态  -->
                    <ControlTemplate.Triggers>
                        <!--  移除鼠标悬停效果  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <!--  空Setter，覆盖默认行为  -->
                        </Trigger>
                        <!--  可选：移除选中效果  -->
                        <Trigger Property="IsSelected" Value="True">
                            <!--  空Setter  -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>