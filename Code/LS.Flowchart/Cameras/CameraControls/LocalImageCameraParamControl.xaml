<UserControl
    x:Class="LS.Flowchart.Cameras.CameraControls.LocalImageCameraParamControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LS.Flowchart.Cameras.CameraControls"
    xmlns:lsuc="clr-namespace:LS.WPF.Core.Library;assembly=LS.WPF.Core.Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="title" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Margin" Value="10,0,0,0" />
                <Setter Property="TextAlignment" Value="Left" />
            </Style>
            <Style x:Key="input" TargetType="TextBox">
                <Setter Property="Margin" Value="0,5,10,5" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="25"
            FontWeight="Bold"
            Foreground="Black"
            Text="本地图像" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource title}"
            Text="图像路径" />
        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox
                d:Text="12121"
                Style="{StaticResource input}"
                Text="{Binding Project_Camera.ImageFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <lsuc:IconSmallButton
                Width="40"
                Height="35"
                Margin="0,0,15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="White"
                Command="{Binding OpenFolderCommand}"
                MouseOverBrush="{DynamicResource OrangeBrush}"
                PathData="{DynamicResource 打开}" />
        </Grid>

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Style="{StaticResource title}"
            Text="循环播放" />
        <lsuc:SquareCheckBox
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
    </Grid>
</UserControl>
