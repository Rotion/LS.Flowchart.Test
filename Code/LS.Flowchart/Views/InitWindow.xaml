<Window
    x:Class="LS.Flowchart.Views.InitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LS.Flowchart.Views"
    xmlns:lsuc="clr-namespace:LS.WPF.Core.Library;assembly=LS.WPF.Core.Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InitWindow"
    Width="900"
    Height="600"
    Background="{DynamicResource InitBackground}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border
                Margin="0,2,0,0"
                BorderBrush="{DynamicResource OrangeBrush}"
                BorderThickness="0,4,0,0" />
            <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                <Image
                    Width="180"
                    Height="45"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Asset/Images/logo2.png" />
                <TextBlock
                    Margin="20,0,0,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    d:Text="V1.0.1"
                    FontSize="20"
                    Foreground="{DynamicResource VersionForeground}"
                    Text="{Binding Version}" />
            </StackPanel>
            <StackPanel
                Margin="0,6,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <lsuc:CommonCheckBox
                    Width="110"
                    Height="30"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="不再提示"
                    FontSize="18"
                    Foreground="{DynamicResource VersionForeground}"
                    IsChecked="{Binding NoShow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PathBrush="LightGray"
                    PathHeight="20"
                    PathMargin="0,0,5,0"
                    PathWidth="20" />
                <lsuc:IconSmallButton
                    Width="30"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="Transparent"
                    Command="{Binding OpCommand}"
                    CommandParameter="Close"
                    Foreground="DarkGray"
                    IconType="Close"
                    MouseOverBrush="Gray" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  创建方案按钮  -->
            <Grid Grid.Column="0" Margin="30,85,20,85">
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    BorderBrush="{DynamicResource OrangeBrush}"
                    BorderThickness="0,0,1,0" />
                <Grid
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="200"
                        Height="150"
                        Margin="0,0,10,10"
                        Command="{Binding OpCommand}"
                        CommandParameter="Blank">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid Background="{DynamicResource InitButtonBackground}">
                                    <Border
                                        x:Name="_bg"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Opacity="0.8" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock
                                                Margin="5,0,0,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                FontSize="25"
                                                Foreground="{DynamicResource DefaultForeground}"
                                                Text="通用方案" />
                                            <Path
                                                Width="80"
                                                Height="60"
                                                Margin="0,10,5,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 斜线}"
                                                Fill="{DynamicResource DefaultGray}"
                                                Opacity="0.5"
                                                Stretch="Fill" />
                                            <Path
                                                Width="50"
                                                Height="50"
                                                Margin="0,10,10,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 纸飞机}"
                                                Fill="{DynamicResource OrangeBrush}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid
                                            Grid.Row="1"
                                            Margin="1"
                                            Background="{DynamicResource InitButtonTitleBackground}">
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Foreground="{DynamicResource VersionForeground}"
                                                Text="创建普通空白方案" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!--  鼠标悬停动画  -->
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Orange"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <!--  鼠标离开动画  -->
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Gray"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="200"
                        Height="150"
                        Margin="10,0,10,10">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid Background="{DynamicResource InitButtonBackground}">
                                    <Border
                                        x:Name="_bg"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Opacity="0.8" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock
                                                Margin="5,0,0,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                FontSize="25"
                                                Foreground="{DynamicResource DefaultForeground}"
                                                Text="定位测量" />
                                            <Path
                                                Width="70"
                                                Height="70"
                                                Margin="0,10,30,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 定位}"
                                                Fill="{DynamicResource DefaultGray}"
                                                Opacity="0.3"
                                                Stretch="Fill" />
                                            <Path
                                                Width="50"
                                                Height="50"
                                                Margin="0,10,5,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 测量尺}"
                                                Fill="{DynamicResource OrangeBrush}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid
                                            Grid.Row="1"
                                            Margin="1"
                                            Background="{DynamicResource InitButtonTitleBackground}">
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Foreground="{DynamicResource VersionForeground}"
                                                Text="创建定位、测量的标准方案" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!--  鼠标悬停动画  -->
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Orange"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <!--  鼠标离开动画  -->
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Gray"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="200"
                        Height="150"
                        Margin="0,10,10,0">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid Background="{DynamicResource InitButtonBackground}">
                                    <Border
                                        x:Name="_bg"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Opacity="0.8" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock
                                                Margin="5,0,0,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                FontSize="25"
                                                Foreground="{DynamicResource DefaultForeground}"
                                                Text="缺陷检测" />
                                            <Path
                                                Width="70"
                                                Height="70"
                                                Margin="0,5,20,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 搜索}"
                                                Fill="{DynamicResource DefaultGray}"
                                                Opacity="0.3"
                                                Stretch="Fill" />
                                            <Path
                                                Width="50"
                                                Height="50"
                                                Margin="0,10,10,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 缺陷}"
                                                Fill="{DynamicResource OrangeBrush}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid
                                            Grid.Row="1"
                                            Margin="1"
                                            Background="{DynamicResource InitButtonTitleBackground}">
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="{DynamicResource VersionForeground}"
                                                Text="创建工件缺陷检测标准方案" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!--  鼠标悬停动画  -->
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Orange"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <!--  鼠标离开动画  -->
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Gray"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="200"
                        Height="150"
                        Margin="10,10,10,0">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid Background="{DynamicResource InitButtonBackground}">
                                    <Border
                                        x:Name="_bg"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        Opacity="0.8" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock
                                                Margin="5,0,0,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                FontSize="25"
                                                Foreground="{DynamicResource DefaultForeground}"
                                                Text="扫码识别" />
                                            <Path
                                                Width="70"
                                                Height="70"
                                                Margin="0,5,30,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 二维码}"
                                                Fill="{DynamicResource DefaultGray}"
                                                Opacity="0.3"
                                                Stretch="Fill" />
                                            <Path
                                                Width="70"
                                                Height="40"
                                                Margin="0,13,5,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Data="{DynamicResource 一维码}"
                                                Fill="{DynamicResource OrangeBrush}"
                                                Stretch="Fill" />
                                        </Grid>
                                        <Grid
                                            Grid.Row="1"
                                            Margin="1"
                                            Background="{DynamicResource InitButtonTitleBackground}">
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="{DynamicResource VersionForeground}"
                                                Text="创建扫码识别标准方案" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!--  鼠标悬停动画  -->
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Orange"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <!--  鼠标离开动画  -->
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="_bg"
                                                    Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                    To="Gray"
                                                    Duration="0:0:0.3">
                                                    <ColorAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut" />
                                                    </ColorAnimation.EasingFunction>
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>

            <Grid
                Grid.Column="1"
                Margin="20,85,20,85"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <Grid Cursor="">
                    <Grid.Resources>
                        <Style x:Key="FileNameStyle" TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="Foreground" Value="{DynamicResource DefaultGray}" />
                            <Setter Property="Margin" Value="0,10,0,10" />
                            <!--  默认状态  -->
                            <Setter Property="Cursor" Value="Arrow" />
                            <Setter Property="TextDecorations">
                                <Setter.Value>
                                    <TextDecorationCollection>
                                        <TextDecoration
                                            PenOffset="1"
                                            PenOffsetUnit="Pixel"
                                            PenThicknessUnit="Pixel">
                                            <TextDecoration.Pen>
                                                <Pen Brush="{DynamicResource DefaultGray}" Thickness="1" />
                                            </TextDecoration.Pen>
                                        </TextDecoration>
                                    </TextDecorationCollection>
                                </Setter.Value>
                            </Setter>

                            <!--  悬停状态  -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                                <!--  鼠标悬停动画  -->
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"
                                                To="Orange"
                                                Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <!--  鼠标离开动画  -->
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"
                                                To="LightGray"
                                                Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>

                        </Style>
                        <Style x:Key="FileTimeStyle" TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="Foreground" Value="{DynamicResource DefaultGray}" />
                            <Setter Property="Margin" Value="0,15,0,15" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        FontSize="25"
                        Foreground="{DynamicResource DefaultGray}"
                        Text="最近打开的方案" />
                    <Path
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="35"
                        Height="25"
                        Margin="20,0,0,0"
                        Data="{DynamicResource 打开}"
                        Fill="{DynamicResource OrangeBrush}"
                        Stretch="Fill" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        d:Text="ABC123"
                        Style="{StaticResource FileNameStyle}"
                        Text="{Binding File1.FileName}">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding FileOpenCommand}"
                                CommandParameter="{Binding File1}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource FileTimeStyle}"
                        Text="{Binding File1.TimeDescription}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        d:Text="ABC123"
                        Style="{StaticResource FileNameStyle}"
                        Text="{Binding File2.FileName}">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding FileOpenCommand}"
                                CommandParameter="{Binding File2}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource FileTimeStyle}"
                        Text="{Binding File2.TimeDescription}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        d:Text="ABC123"
                        Style="{StaticResource FileNameStyle}"
                        Text="{Binding File3.FileName}">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding FileOpenCommand}"
                                CommandParameter="{Binding File3}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Style="{StaticResource FileTimeStyle}"
                        Text="{Binding File3.TimeDescription}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        d:Text="ABC123"
                        Style="{StaticResource FileNameStyle}"
                        Text="{Binding File4.FileName}">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding FileOpenCommand}"
                                CommandParameter="{Binding File4}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Style="{StaticResource FileTimeStyle}"
                        Text="{Binding File4.TimeDescription}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        d:Text="ABC123"
                        Style="{StaticResource FileNameStyle}"
                        Text="{Binding File5.FileName}">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding FileOpenCommand}"
                                CommandParameter="{Binding File5}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="1"
                        Style="{StaticResource FileTimeStyle}"
                        Text="{Binding File5.TimeDescription}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        d:Text="ABC123"
                        Style="{StaticResource FileNameStyle}"
                        Text="{Binding File6.FileName}">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding FileOpenCommand}"
                                CommandParameter="{Binding File6}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="1"
                        Style="{StaticResource FileTimeStyle}"
                        Text="{Binding File6.TimeDescription}" />

                </Grid>
            </Grid>

        </Grid>
        <Grid Grid.Row="2" Background="{DynamicResource InitBackground}" />
    </Grid>
</Window>
